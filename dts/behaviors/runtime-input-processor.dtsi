#include <dt-bindings/zmk/behaviors.h>

/ {
	behaviors {
		// High DPI
#if ZMK_BEHAVIOR_OMIT(RIP)
		/omit-if-no-ref/
		#endif
		hdpi: hdpi {
			compatible = "zmk,input-processor-runtime";
			processor-label = "default";
			type = <INPUT_EV_REL>;
			x-codes = <INPUT_REL_X>;
			y-codes = <INPUT_REL_Y>;
			// x1.5 scaling
			scale-multiplier = <3>;
			scale-divisor = <2>;
			rotation-degrees = <0>;
			track-remainders;
			
			#binding-cells = <0>;
		};
		
		// Low DPI
    #if ZMK_BEHAVIOR_OMIT(RIP)
		/omit-if-no-ref/
		#endif
		ldpi: ldpi {
			compatible = "zmk,input-processor-runtime";
			processor-label = "default";
			type = <INPUT_EV_REL>;
			x-codes = <INPUT_REL_X>;
			y-codes = <INPUT_REL_Y>;
			// x0.5 scaling
			scale-multiplier = <1>;
			scale-divisor = <2>;
			rotation-degrees = <0>;
			track-remainders;
			
			#binding-cells = <0>;
		};
		
		// High Speed Scroll
    #if ZMK_BEHAVIOR_OMIT(RIP)
		/omit-if-no-ref/
		#endif
		hscr: hscr {
			compatible = "zmk,input-processor-runtime";
			processor-label = "scroll";
			type = <INPUT_EV_REL>;
			x-codes = <0>;// Unused, but must match y-codes length
			y-codes = <INPUT_REL_WHEEL>;
			scale-multiplier = <3>;
			scale-divisor = <2>;
			rotation-degrees = <0>;
			track-remainders;
			
			#binding-cells = <0>;
		};
		
		// Low Speed Scroll
    #if ZMK_BEHAVIOR_OMIT(RIP)
		/omit-if-no-ref/
		#endif
		lscr: lscr {
			compatible = "zmk,input-processor-runtime";
			processor-label = "scroll";
			type = <INPUT_EV_REL>;
			x-codes = <0>;// Unused, but must match y-codes length
			y-codes = <INPUT_REL_WHEEL>;
			scale-multiplier = <1>;
			scale-divisor = <2>;
			rotation-degrees = <0>;
			track-remainders;
			
			#binding-cells = <0>;
		};
	};
	
};
